    "gray-matter": "^4.0.3",
    "migrate": "^2.1.0",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.2",
    "@types/pg": "^8.15.6",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "shx": "^0.4.0",
